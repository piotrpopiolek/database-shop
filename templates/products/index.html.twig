{% extends 'base.html.twig' %}

{% block title %}Products list
{% endblock %}

{% block body %}

    {% if products %}
        <table id="products" class="table table-striped">
            <thread>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Availability</th>
                </tr>
            </thread>
            <tbody>
                {% for product in products %}
                    <tr>
                        <td>{{ product.name }}</td>
                        <td>{{ product.description }}</td>
                        <td>{{ product.price }}</td>
                        <td>{{ product.availability }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </tbody>
    </table>
{% else %}
    <p>No products to display</p>
{% endif %}{% endblock %}{% block javascripts %}
<script src=""></script>{% endblock %}
